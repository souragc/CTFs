version: '2.3'
services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    networks:
      piano_network:
        ipv6_address: fd00:1337:TEAMID:c0c6::1
    restart: unless-stopped
networks:
  piano_network:
    enable_ipv6: true
    ipam:
      driver: default
      config:
        - subnet: fd00:1337:TEAMID:c0c6::/64
          gateway: fd00:1337:TEAMID:c0c6::ffff